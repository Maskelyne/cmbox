extends ../layout/page-layout

block variables
  - var title = "Воронка продаж"

block header
  +header

block main

  -
    const boxesList = [
      {
        link: 'services-site.html',
        path: 'services',
        name: 'box-site',
        format: 'svg',
        width: '260',
        height: '190',
        altText: 'Сайт'
      },
      {
        link: 'services-sales.html',
        path: 'services',
        name: 'box-sales',
        format: 'svg',
        width: '260',
        height: '190',
        altText: 'Воронка продаж'
      },
      {
        link: 'services-seo.html',
        path: 'services',
        name: 'box-seo',
        format: 'svg',
        width: '260',
        height: '190',
        altText: 'Seo'
      },
      {
        link: 'services-context.html',
        path: 'services',
        name: 'box-contecst',
        format: 'svg',
        width: '260',
        height: '190',
        altText: 'Seo'
      },
      {
        link: 'services-social.html',
        path: 'services',
        name: 'box-social',
        format: 'svg',
        width: '260',
        height: '190',
        altText: 'Seo'
      },
      {
        link: 'services-marketing.html',
        path: 'services',
        name: 'box-marketing',
        format: 'svg',
        width: '260',
        height: '190',
        altText: 'Seo'
      },
      {
        link: 'services-crm.html',
        path: 'services',
        name: 'box-crm',
        format: 'svg',
        width: '260',
        height: '190',
        altText: 'Seo'
      },
    ];

  main
    section.services
      .services__wrapper.container
        h1 Услуги
      .services__box
        ul.services__boxes-list
          each item in boxesList
            li
              a(href= item.link)
                +img(item.path, item.name, item.format, item.width, item.height, item.altText)
        .services__box-images
          .services__image
            +img('services', 'icon-sales', 'svg', '257', '240', 'Воронка')
          .services__boxes
            +img('services', 'big-box-active', 'svg', '640', '380', 'Коробка')
            +img('services', 'big-box-hover', 'svg', '640', '380', 'Коробка')
        .services__box-text
          h2 Создадим рабочую воронку продаж любой сложности
          .services__text
            p
              span Современная воронка продаж в интернете
              |  — это поэтапный инструмент привлечения и плавного прогрева с помощью полезного контента,
              span  приводящего к покупке или повышению лояльности.
              |  Что даёт возможность потенциальному покупателю самому прийти к выводу, что ему нужен именно ваш продукт, без продажи в лоб, которая потеряла свою эффективность и вызывает только негатив.
          .services__text.services__text-box--2.services__text-light--gray
            p С таким подходом, даже если потенциальный покупатель не купит у вас сегодня, он может посоветовать вас своему знакомому. В рамках этой концепции
              span  очень важно собирать отзывы и работать с негативом,
              |  это влияет на продажи и отношение к вашему бренду.
      .services__box-portfolio.container
        h2 Примеры работ вы можете посмотреть на странице
          a(href="#")  Портфолио

block footer
  +footer
