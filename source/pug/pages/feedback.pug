              input(id="user_name" type="text" name="user_name" required)
              label(for="user_name") Имя
            .modal__user-position
              input(id="user_position" type="tel" name="user_position" required)
              label(for="user_position") Должность
            .modal__user-company
              input(id="user_company" type="text" name="user_company" required)
              label(for="user_company") Название компании
            .modal__user-comment
              textarea(id="user_comment" name="user_comment")
              label(for="user_comment") Комментарий
