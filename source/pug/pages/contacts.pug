extends ../layout/page-layout

block variables
  - var title = "Главная"

block header
  +header

block main
  main.gray-box
    section.contacts
      .contacts__wrapper.container
        h1 Контакты
        .contacts__box-info
          .contacts__image
            +img('svg', 'img-girl', 'svg', '408', '610', 'Контакты')
          .contacts__social
            h2 Мы
              br
              |
              span  в социальных сетях
            +footer-social
          .contacts__info
            h2 Маркетинговое агенство
            h3 Creative Marketing
              span  box
            .main-footer__contacts
              a.main-footer__link-location(href="https://yandex.by/maps/157/minsk/house/Zk4YcARnSEwGQFtpfXV1dHRrZw==/?ll=27.639610%2C53.946001&utm_source=main_stripe_big&z=16.5" target="_blank") ул. Калиновского 77а, офис 310
              a.main-footer__link-mail(href="mail:info@cmbox.by") info@cmbox.by
              .main-footer__link-box
                .main-footer__phone
                  a.main-footer__link-phone(href="tel:+375296086368") +375 (29) 608-63-68 (Минск)
                  a.main-footer__link-phone(href="tel:+375296086368") +7 (495) 608-63-68 (Москва)
                +social-list
            .contacts__form
              p Как с Вами связаться?
              form(id="form" action="#" method="get")
                .modal__user-name
                  input(id="user_name" type="text" name="user_name" required)
                  label(for="user_name") Имя
                .modal__user-phone
                  input(id="user_phone" type="tel" name="user_phone" required)
                  label(for="user_phone") Телефон
                .modal__user-comment
                  textarea(id="user_comment" name="user_comment")
                  label(for="user_comment") Комментарий
                button.button(type="submit")
                  span Отправить

block footer
  +footer
