mixin header()

  -
    var headerList = [
      {
        text: 'О нас',
        link: 'about-us.html'
      },
      {
        text: 'Услуги',
        link: 'services-site.html'
      },
      {
        text: 'Этапы',
        link: 'steps.html'
      },
      {
        text: 'Портфолио',
        link: 'portfolio.html'
      },
      {
        text: 'Блог',
        link: 'blog.html'
      },
      {
        text: 'Контакты',
        link: 'contacts.html'
      },
    ];

  -
    var stageList = [
      {
        link: '#',
        text: 'Стратегия'
      },
      {
        link: '#',
        text: 'Анализ'
      },
      {
        link: '#',
        text: 'Дизайн'
      },
