mixin header()

  -
    const headerList = [
      {
        text: 'О нас',
        link: 'about-us.html'
      },
      {
        text: 'Услуги',
        link: 'services.html'
      },
      {
        text: 'Этапы',
        link: 'steps.html'
      },
      {
        text: 'Портфолио',
        link: 'portfolio.html'
      },
      {
        text: 'Блог',
        link: 'blog.html'
      },
      {
        text: 'Контакты',
        link: 'contacts.html'
      },
    ];

  section.main-header
    nav.main-header__wrapper.container
      .main-header__image
        +img('svg', 'logo', 'svg', '120', '43', 'Логотип сайта')
      ul.main-header__list
        each item in headerList
          li
            a(href= item.link)= item.text
      .main-header__box
        +img('svg', 'icon-mobile', 'svg', '24', '24', '')

  .our-work-slider
    .our-work-slider__swiper-container.swiper-container
      ul.our-work-slider__wrapper.swiper-wrapper
        li.swiper-slide
          a(href="#")
            img(src="img/image-1.png" width="346" height="310" alt="Первый слайд")
        li.swiper-slide
          a(href="#")
            img(src="img/image-1.png" width="346" height="310" alt="Второй слайд")
        li.swiper-slide
          a(href="#")
            img(src="img/image-1.png" width="346" height="310" alt="Третий слайд")
      .our-work-slider__swiper-button-prev.swiper-button-prev
      .our-work-slider__swiper-button-next.swiper-button-next
